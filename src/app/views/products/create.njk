{% extends "../layout.njk" %}

{% block content %}
  <section class="container form">
    <div>
      <form class="form" action="/products" method="POST" enctype="multipart/form-data">
        <div class="header">
          <h3>Cadastrando o seu produto {{productId}}</h3>
        </div>
        <div class="fields">
          {% include 'products/fields.njk'%}
        </div>
        <button class="button" type="submit">Cadastrar</button>
      </form>
    </div>
  </section>

{% endblock content %}



