<header>
  <div class="header container">
    <a href="/">
      <div class="logo">
        <h1>Launchstore</h1>
        <h2>COMPRA E VENDA</h2>
      </div>
    </a>
    <div>
      <form class="search" action="/products/search" method="GET">
        <input
          type="text"
          name="filter"
          placeholder="Buscar produtos"
          {% if search.term %}
            value="{{filter}}"
          {% endif %}
          >
      </form>
    </div>
    <nav class="primary">
      <ul>
        <li>
          <a href="/products/create">
            <i class="material-icons">add</i>
            Novo Anúncio
          </a>
        </li>
        <li class="accounts">
          <a href="/accounts">
            <i class="material-icons">account_circle</i>
            Minha Conta
          </a>
          {% if session.userID %}
            <ul class="submenu">
              <li>
                <a href="/users">Configurações</a>
              </li>
              <li>
                <a href="/buying">Meus pedidos</a>
              </li>
              <li>
                <a href="/selling">Minhas vendas</a>
              </li>
              <li>
                <form action="/users/logout" method="POST">
                  <button>Sair</button>
                </form>
              </li>
            </ul>
          {% endif %}
        </li>
      </ul>
    </nav>
  </div>
</header>