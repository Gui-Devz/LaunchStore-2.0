  <div class="item">
    <div>Name</div>
    <div>
      <input type="text" name="name" placeholder="Digite seu nome completo" value="{{user.name}}">
    </div>
  </div>

  <div class="item">
    <div>Email</div>
    <div>
      <input
        type="text"
        name="email"
        placeholder="Digite seu email"
        value="{{user.email}}"
      >
    </div>
  </div>

  <div class="item">
    <div>Senha</div>
    <div>
      <input 
        type="password"
        name="password"
        placeholder="Escolha uma senha segura"
        value={{user.password}}
      >
    </div>
  </div>

  {% if not user.id %}
    <div class="item">
      <div>Repetir Senha</div>
      <div>
        <input
          type="password"
          name="passwordRepeat"
          placeholder="Digite a senha novamente"
        >
      </div>
    </div>
  {% endif %}

  <div class="item">
    <div>CPF ou CNPJ</div>
    <div>
      <input
        type="text"
        name="cpf_cnpj"
        placeholder="Digite seu documento"
        value="{{user.cep}}"
      >
    </div>
  </div>

  <div class="item">
    <div>CEP</div>
    <div>
      <input
        type="text"
        name="cep"
        placeholder="99999-999"
        value="{{user.cep}}"
      >
    </div>
  </div>

  <div class="item">
    <div>Endereço Completo</div>
    <div>
      <input
        type="text"
        name="address"
        placeholder="Digite seu endereço completo"
        value="{{user.address}}"
      >
    </div>
  </div>









